---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { playlists } from '../libreria/data';
import PlayListItemCard from '../components/PlayListItemCard.astro';
import Greeting from '../components/Greeting.svelte';
---

<Layout title="AnimeFy - Your favorite anime music">
  <div 
  id="playlist-container" 
  class="relative transition-all duration-1000 bg-cyan-800">

    <div class="relative z-10 px-6 pt-10">
      <Greeting />

      <div class="flex flex-wrap mt-6 gap-4">
      {playlists.map(playlist =>  <PlayListItemCard playlist={playlist} />)}
      </div>

    </div>

    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
  </div>
  </div>
</Layout>

